	note = {\_eprint: https://besjournals.onlinelibrary.wiley.com/doi/pdf/10.1111/j.1365-2664.2006.01224.x},
	keywords = {δ13C, mixing models, aquatic invertebrates, C:N ratio, fish, lipids, validation},
