@article{ubertini_gametogenesis_2017,
	title = {Gametogenesis, spawning behavior and larval abundance of the {Pacific} oyster {Crassostrea} gigas in the {Thau} lagoon: {Evidence} of an environment-dependent strategy},
	volume = {473},
	issn = {00448486},
