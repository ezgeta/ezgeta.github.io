	author = {Villéger, Sébastien and Miranda, Julia Ramos and Hernández, Domingo Flores and Mouillot, David},
	year = {2010},
	keywords = {environmental changes, estuarine ecosystem, eutrophication, fish ecomorphology, functional divergence, functional evenness, functional richness, Gulf of Mexico, human disturbance, seagrass, Terminos Lagoon},
	pages = {1512--1522},
