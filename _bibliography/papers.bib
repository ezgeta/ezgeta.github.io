	urldate = {2019-08-10},
	journal = {Journal of Sea Research},
	author = {Gasmi, Sonia and Bernard, Ismaël and Pouvreau, Stéphane and Maurer, Danièle and Schaal, Gauthier and Ganthy, Florian and Cominassi, Louise and Allain, Gwenhael and Sautour, Benoit and David, Valérie},
	month = jan,
	year = {2017},
	pages = {28--36}
}

