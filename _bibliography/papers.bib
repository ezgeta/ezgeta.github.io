@article{jardas_diet_2004,
	title = {Diet composition and feeding intensity of horse mackerel, \textit{{Trachurus} trachurus} ({Osteichthyes}: {Carangidae}) in the eastern {Adriatic}},
	volume = {144},
	issn = {1432-1793},
