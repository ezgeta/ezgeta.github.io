	journal = {Diseases of Aquatic Organisms},
	author = {Narcisi, V and Arzul, I and Cargini, D and Mosca, F and Calzetta, A and Traversa, D and Robert, M and Joly, Jp and Chollet, B and Renault, T and Tiscar, Pg},
