@article{dridi_seasonal_2007,
	title = {Seasonal variation in weight and biochemical composition of the {Pacific} oyster, \textit{{Crassostrea} gigas} in relation to the gametogenic cycle and environmental conditions of the {Bizert} lagoon, {Tunisia}},
