@article{delgado_comparative_2007,
	title = {Comparative study of gonadal development of \textit{{Ruditapes} philippinarum} ({Adams} and {Reeve}) and \textit{{Ruditapes} decussatus} ({L}.) ({Mollusca}: {Bivalvia}): {Influence} of temperature},
